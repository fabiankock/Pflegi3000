<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.show_patient_activity.ShowPatientFragmente.MedikamenteFragment">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/show_medikament"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.show_patient_activity.ShowPatientFragmente.MedikamentFragment">

        <ListView
            android:id="@+id/medikamente_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/add_medikament"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:context=".activities.show_patient_activity.ShowPatientFragmente.MedikamentFragment">

        <TextView
            android:id="@+id/head_bezeichnung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Bezeichnung"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_mName"
            android:inputType="text"
            android:textSize="30sp"
            android:background="@drawable/patient_border"
            app:layout_constraintTop_toBottomOf="@id/head_bezeichnung"
            app:layout_constraintLeft_toLeftOf="@id/head_bezeichnung"/>

        <TextView
            android:id="@+id/head_Dosierung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosierung in mg"
            app:layout_constraintTop_toBottomOf="@id/add_mName"
            app:layout_constraintLeft_toLeftOf="@id/head_bezeichnung"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_mDosis"
            android:inputType="numberDecimal"
            android:textSize="30sp"
            android:background="@drawable/patient_border"
            app:layout_constraintTop_toBottomOf="@id/head_Dosierung"
            app:layout_constraintLeft_toLeftOf="@id/head_bezeichnung"/>

        <TextView
            android:id="@+id/head_uhrzeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uhrzeit"
            app:layout_constraintTop_toBottomOf="@id/add_mDosis"
            app:layout_constraintLeft_toLeftOf="@id/head_bezeichnung"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_time"
            android:textSize="30sp"
            android:textColor="@color/caldroid_black"
            android:background="@drawable/patient_border"
            app:layout_constraintTop_toBottomOf="@id/head_uhrzeit"
            app:layout_constraintLeft_toLeftOf="@id/head_bezeichnung"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_mCommit"
            android:text="abschlieÃŸen"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/add_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
