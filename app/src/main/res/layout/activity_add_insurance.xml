<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.alter_tables_activity.add_insurance_activity.AddInsuranceActivity">

    <EditText
        android:id="@+id/edittext_insuranceName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insurance_name"
        android:inputType="text"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edittext_insuranceType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insurance_type"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/edittext_insuranceName" />

    <Button
        android:id="@+id/back_button_add_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <Button
        android:id="@+id/submit_button_add_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

</android.support.constraint.ConstraintLayout>